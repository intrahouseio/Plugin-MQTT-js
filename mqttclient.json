{
  "description": "MQTT client",
  "module": "mqttclient.js",
  "restartOnChannelsChange": 1,

  "params": [
    {
      "name": "host",
      "note": "$host",
      "type": "string",
      "val": "127.0.0.1"
    },
    {
      "name": "port",
      "note": "$port",
      "type": "number",
      "val": "1883"
    },

    {
      "name": "use_password",
      "note": "$use_password",
      "type": "cb",
      "val": "false"
    },
    {
      "name": "username",
      "note": "$login",
      "type": "string",
      "val": "login",
      "visible": "data.use_password"
    },
    {
      "name": "password",
      "note": "$password",
      "type": "string",
      "val": "password",
      "visible": "data.use_password"
    }
  ],

  "chpattern": [
    {
      "name": "desc",
      "note": "$type",
      "type": "droplist",
      "data": [
        { "id": "DI", "name": "DI - Digital Input" },
        { "id": "DO", "name": "DO - Digital Output" },
        { "id": "AI", "name": "AI - Analog Input" },
        { "id": "AO", "name": "AO - Analog Output (PWM)" },
        { "id": "Meter", "name": "Meter - (IN)" }
      ]
    },

    { "name": "topic", "note": "$topic", "type": "STRING" },
    {
      "name": "startscene",
      "note": "$startscene",
      "type": "droplist",
      "data": "listfromworkscenes"
    },
    {
      "name": "actions",
      "tabnote": "$actions",
      "note": "$action",
      "type": "multi",
      "visible": "data.desc == \"DO\" || data.desc == \"AO\"",
      "data": {
        "scheme": {
          "act": {
            "name": "$action",
            "type": "droplist",
            "order": 0,
            "data": [{ "id": "on", "name": "on" }, { "id": "off", "name": "off" }, { "id": "toggle", "name": "toggle" }, { "id": "set", "name": "set" }]
          },
          "topic": { "name": "$topic", "type": "STRING", "order": 1 },
          "message": { "name": "$message", "type": "STRING", "order": 2 }
        },
        "default": {
          "act": "on",
          "topic": "/devices/dn/command",
          "message": "on"
        }
      }
    }
  ],

  "chdefault": {
    "chan": 1,
    "desc": "DI",
    "topic": "/devices/dn",
    "dn": "",
    "actions": [
      { "act": "on", "topic": "/devices/dn/command", "message": "on" },
      { "act": "off", "topic": "/devices/dn/command", "message": "off" }
    ]
  },

  "genrules": {
    "AI": { "cl": "SensorA" },
    "AO": { "cl": "ActorA" },
    "DI": { "cl": "SensorD" },
    "DO": { "cl": "ActorD" },
    "Meter": { "cl": "Meter" }
  },

  "extrapattern": [
    {
      "name": "desc",
      "note": "$type",
      "type": "droplist",
      "data": [
        { "id": "DI", "name": "DI - Digital Input" },
        { "id": "DO", "name": "DO - Digital Output" },
        { "id": "AI", "name": "AI - Analog Input" },
        { "id": "AO", "name": "AO - Analog Output (PWM)" },
        { "id": "Meter", "name": "Meter - (IN)" }
      ]
    },

    {
      "name": "dn",
      "note": "$deviceForPublish",
      "type": "autocomplete",
      "data": "devicesdroplist"
    },
    {
      "name": "topic",
      "note": "$topic",
      "type": "string"
    },
    {
      "name": "calc",
      "note": "$calc",
      "type": "string"
    },
    {
      "name": "actions",
      "tabnote": "$actions",
      "note": "$action",
      "type": "multi",
      "visible": "data.desc == \"DO\" || data.desc == \"AO\"",
      "data": {
        "scheme": {
          "topic": { "name": "$topic", "type": "STRING", "order": 1 },
          "message": { "name": "$message", "type": "STRING", "order": 2 },
          "act": {
            "name": "$action",
            "type": "droplist",
            "order": 3,
            "data": [{ "id": "on", "name": "on" }, { "id": "off", "name": "off" }, { "id": "toggle", "name": "toggle" },{ "id": "set", "name": "set" }]
          }
        },
        "default": {
          "act": "on",
          "topic": "/devices/dn/command",
          "message": "on"
        }
      }
    }
  ],

  "extradefault": {
    "desc": "DI",
    "dn": "",
    "topic": "/devices/dn",
    "calc": "",
    "actions": [
      { "act": "on", "topic": "/devices/dn/command", "message": "on" },
      { "act": "off", "topic": "/devices/dn/command", "message": "off" }
    ]
  },

  "actions": [{}]
}
